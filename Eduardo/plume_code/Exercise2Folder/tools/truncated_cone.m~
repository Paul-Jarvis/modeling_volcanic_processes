function truncated_cone(volcano_height, radius)
    figure(9181716)
    r=linspace(1,2,10); % Anello circolare
    theta = linspace(0,2*pi,10); % Angolo
    [r,theta] = meshgrid(r,theta);
    x = r.*cos(theta);
    y = r.*sin(theta);
    z = -r;
    mesh(x,y,z)
    
% [x,y,z] = cylinder(1:10);
% figure
% surfnorm(x,y,z)
% axis([-12 12 -12 12 -0.1 1])
end